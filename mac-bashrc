# My local bin directory.
PATH=$PATH:$HOME/bin; export PATH

#TERM="xterm-color" ; export TERM
export CLICOLOR=1
export LSCOLORS=GxFxCxDxBxegedabagaced

alias v="vim"
alias vr="vim -R"
alias sv="sudo vim"
alias q='exit'
alias c='clear'
alias tree='tree -C'
alias s='sudo'
alias sv='sudo vim'
alias g='grep -Hin --colour=always'

# Overide these aliases privided by the above
# aliases file. They don't play well with BSD.
alias ll="ls -lG"
alias ls="ls -G"
alias all="ls -la"

# Android SDK
export ANDROID_SDK_ROOT=/usr/local/opt/android-sdk

if [ -f $(brew --prefix)/etc/bash_completion ]; then
  . $(brew --prefix)/etc/bash_completion
fi

# set the terminal label to something undestandable.
echo -ne "\033]0;`whoami`@`hostname`$@\007"

# If we are on a dev system, pull in the git bash profile
. ~/Projects/dotfiles/bash/profile_git

source ~/Projects/dotfiles/bash/aliases
source ~/Projects/dotfiles/bash/prompt
